
<%= form_for @user do |f| %>
  <fieldset>
    <legend>User Information</legend>

    <%= f.label :username %>
    <%= f.text_field :username %>

    <%= f.label :password %>
    <%= f.password_field :password %>

    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </fieldset>

  <%= f.submit "Sign Up", class: 'btn btn-primary'%>
<% end %>

